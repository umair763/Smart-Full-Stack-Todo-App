{
	"version": 2,
	"builds": [
		{
			"src": "client/package.json",
			"use": "@vercel/static-build",
			"config": {
				"distDir": "dist",
				"framework": "vite"
			}
		},
		{
			"src": "server/index.js",
			"use": "@vercel/node",
			"config": {
				"maxLambdaSize": "50mb"
			}
		}
	],
	"routes": [
		{
			"handle": "filesystem"
		},
		{
			"src": "/api/(.*)",
			"dest": "server/index.js"
		},
		{
			"src": "/(.*)",
			"dest": "client/dist/index.html"
		}
	],
	"functions": {
		"server/index.js": {
			"maxDuration": 30
		}
	}
}
