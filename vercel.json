{
	"version": 2,
	"buildCommand": "cd client && npm install && npm run build",
	"outputDirectory": "client/dist",
	"functions": {
		"server/index.js": {
			"maxDuration": 30
		}
	},
	"rewrites": [
		{
			"source": "/api/(.*)",
			"destination": "/api/server"
		},
		{
			"source": "/socket.io/(.*)",
			"destination": "/api/server"
		},
		{
			"source": "/(.*)",
			"destination": "/client/dist/index.html"
		}
	]
}
