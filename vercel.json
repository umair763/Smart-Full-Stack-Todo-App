{
	"version": 2,
	"builds": [
		{
			"src": "server/index.js",
			"use": "@vercel/node",
			"config": {
				"includeFiles": ["server/**"]
			}
		},
		{
			"src": "client/package.json",
			"use": "@vercel/static-build",
			"config": {
				"distDir": "../dist",
				"installCommand": "npm install --legacy-peer-deps"
			}
		}
	],
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "/server/index.js"
		},
		{
			"src": "/socket.io/(.*)",
			"dest": "/server/index.js"
		},
		{
			"src": "/assets/(.*)",
			"dest": "/dist/assets/$1"
		},
		{
			"src": "/(.*)",
			"dest": "/dist/index.html"
		}
	],
	"env": {
		"NODE_ENV": "production"
	}
}
