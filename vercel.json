{
	"version": 2,
	"builds": [
		{
			"src": "server/index.js",
			"use": "@vercel/node"
		},
		{
			"src": "client/package.json",
			"use": "@vercel/static-build",
			"config": {
				"distDir": "dist"
			}
		}
	],
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "server/index.js"
		},
		{
			"src": "/socket.io/(.*)",
			"dest": "server/index.js"
		},
		{
			"src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))",
			"dest": "/client/dist/$1"
		},
		{
			"src": "/assets/(.*)",
			"dest": "/client/dist/assets/$1"
		},
		{
			"src": "/(.*)",
			"dest": "/client/dist/index.html"
		}
	]
}
