{
	"version": 2,
	"builds": [
		{
			"src": "client/package.json",
			"use": "@vercel/static-build",
			"config": {
				"distDir": "dist"
			}
		},
		{
			"src": "server/server.js",
			"use": "@vercel/node"
		}
	],
	"routes": [
		{ "handle": "filesystem" },

		{ "src": "/api/(.*)", "dest": "/server/server.js" },

		{ "src": "/(.*)", "dest": "/index.html" }
	]
}
