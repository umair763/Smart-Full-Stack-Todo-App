{
	"version": 2,
	"builds": [
		{
			"src": "server/index.js",
			"use": "@vercel/node",
			"config": {
				"includeFiles": ["server/**"]
			}
		},
		{
			"src": "client/package.json",
			"use": "@vercel/static-build",
			"config": {
				"distDir": "dist"
			}
		}
	],
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "/server/index.js"
		},
		{
			"src": "/socket.io/(.*)",
			"dest": "/server/index.js"
		},
		{
			"handle": "filesystem"
		},
		{
			"src": "/(.*)",
			"dest": "/server/index.js"
		}
	],   
	"env": {
		"NODE_ENV": "production",
		"VITE_API_URL": "https://smart-full-stack-todo-app.vercel.app/api",
		"VITE_SOCKET_URL": "https://smart-full-stack-todo-app.vercel.app"
	}
}
