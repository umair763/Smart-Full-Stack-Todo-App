{
	"version": 2,
	"buildCommand": "cd client && npm install && npm run build",
	"outputDirectory": "client/dist",
	"builds": [
		{
			"src": "server/index.js",
			"use": "@vercel/node"
		},
		{
			"src": "client/dist/**/*",
			"use": "@vercel/static"
		}
	],
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "/server/index.js"
		},
		{
			"src": "/socket.io/(.*)",
			"dest": "/server/index.js"
		},
		{
			"src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))",
			"dest": "/client/dist/$1"
		},
		{
			"src": "/(.*)",
			"dest": "/client/dist/index.html"
		}
	]
}
