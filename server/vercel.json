{
    "version": 2,
    "functions": {
        "index.js": {
            "runtime": "nodejs18.x",
            "maxDuration": 30
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/index.js"
        },
        {
            "source": "/health",
            "destination": "/index.js"
        },
        {
            "source": "/socket.io/(.*)",
            "destination": "/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.js"
        }
    ]
}
