{
    "version": 2,
    "name": "smart-todo-backend",
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/socket.io/(.*)",
            "destination": "/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.js"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "https://smart-todo-task-management-frontend.vercel.app"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "Content-Type, Authorization"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET, POST, PUT, DELETE, PATCH, OPTIONS"
                },
                {
                    "key": "Access-Control-Allow-Credentials",
                    "value": "true"
                }
            ]
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "FRONTEND_URL": "https://smart-todo-task-management-frontend.vercel.app"
    }
}
